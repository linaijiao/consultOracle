<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="4dp">
    <TextView
        android:id="@+id/tv_pillar_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#666666"
        tools:text="年柱"/>
    <TextView
        android:id="@+id/tv_stem_tengod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#666666"
        tools:text="比肩"/>

    <TextView
        android:id="@+id/tv_stem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        tools:text="甲"/>

    <TextView
        android:id="@+id/tv_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        tools:text="子"/>

    <TextView
        android:id="@+id/tv_hidden_stems"
        android:layout_width="wrap_content"
        tools:text="癸 伤官\n辛 劫财\n己 正财"
        android:layout_height="90dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center|center_horizontal"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_pillar_lifeStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#999999"
        android:layout_marginTop="0dp"
        tools:text="临官"/>

    <TextView
        android:id="@+id/tv_pillar_nayin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#999999"
        android:layout_marginTop="4dp"
        tools:text="海中金"/>
    <TextView
        android:id="@+id/tv_pillar_kongwang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#999999"
        android:layout_marginTop="4dp"
        tools:text="寅卯"/>

</LinearLayout>